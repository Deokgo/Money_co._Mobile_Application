<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorful_bg">
    <TextView
        android:text="Sign Up"
        android:textSize="110px"
        android:layout_marginTop="70px"
        android:layout_marginBottom="150px"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="62.5dp"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:gravity="center" />
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="50px"
        android:paddingBottom="50px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginBottom="70px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#95ffffff">
        <TextView
            android:text="Mobile Number:"
            android:textSize="35px"
            android:layout_marginTop="50px"
            android:textColor="#000000"
            android:layout_marginStart="70px"
            android:textStyle="bold"
            android:layout_marginEnd="70px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="70px"
            android:hint="09##########"
            android:textColor="#000000"
            android:layout_marginEnd="70px"
            android:layout_height="wrap_content"
            android:id="@+id/editText1" />
        <TextView
            android:text="Customer Name:"
            android:textSize="35px"
            android:textColor="#000000"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="70px"
            android:textColor="#000000"
            android:layout_marginEnd="70px"
            android:layout_height="wrap_content"
            android:id="@+id/editText2" />
        <TextView
            android:text="Create Password:"
            android:textSize="35px"
            android:textColor="#000000"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="70px"
            android:textColor="#000000"
            android:layout_marginEnd="70px"
            android:layout_height="wrap_content"
            android:id="@+id/editText3" />
        <TextView
            android:text="Confirm Password:"
            android:textSize="35px"
            android:textColor="#000000"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="70px"
            android:textColor="#000000"
            android:layout_marginEnd="70px"
            android:layout_height="wrap_content"
            android:id="@+id/editText4" />
        <CheckBox
            android:text="Show Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60px"
            android:textStyle="bold"
            android:layout_marginEnd="70px"
            android:id="@+id/checkBox1" />
        <TextView
            android:text="*Please ensure accuracy of the information provided"
            android:textSize="35px"
            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="52.5dp"
            android:id="@+id/textView6"
            android:gravity="center" />
    </LinearLayout>
    <Button
        android:text="Sign Up"
        android:layout_marginTop="50px"     
        android:textSize="50px"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_width="match_parent"
        android:layout_height="60.5dp"
        android:backgroundTint="#ff63"
        android:id="@+id/button1" />
    <Button
        android:text="Cancel"
        android:layout_marginStart="100dp"
        android:textSize="50px"
        android:layout_marginEnd="100dp"
        android:layout_width="match_parent"
        android:layout_height="60.5dp"
        android:backgroundTint="#f62534"
        android:id="@+id/button2" />
</LinearLayout>
