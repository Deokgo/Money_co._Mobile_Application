<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorful_bg">
    <TextView
        android:text="Add Money"
        android:textSize="110px"
        android:layout_marginTop="50px"
        android:layout_marginBottom="75px"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="52.5dp"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:gravity="center" />
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="50px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <TextView
            android:text="Your Balance:"
            android:textSize="50px"
            android:textColor="#FF692C"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/textView2" />
        <TextView
            android:text=""
            android:textSize="100px"
            android:layout_marginBottom="75px"
            android:textColor="#6C6C6C"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/textView3" />
        <TextView
            android:text="Enter Amount:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50px"
            android:textColor="#000000"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="70px"
            android:textColor="#000000"
            android:textSize="50px"
            android:hint="0.00"
            android:layout_marginEnd="70px"
            android:layout_height="wrap_content"
            android:id="@+id/editText1" />
        <TextView
            android:text="*Updated balance must be reflected upon successful transaction"
            android:textSize="35px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:gravity="center" />
            <Button
                android:text="Add Money"
                android:layout_marginTop="100px"
                android:textSize="45px"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="60.5dp"
                android:backgroundTint="#ff63"
                android:id="@+id/button1" />
            <Button
                android:text="Back"
                android:textSize="45px"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="60.5dp"
                android:backgroundTint="#f62534"
                android:id="@+id/button2" />
    </LinearLayout>
</LinearLayout>
